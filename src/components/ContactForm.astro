<!-- Script de validaci√≥n y submit - JavaScript vanilla -->
<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  const successMessage = document.getElementById('success-message');
  
  // Validaci√≥n en tiempo real
  const inputs = form?.querySelectorAll('input, textarea, select');
  inputs?.forEach(input => {
    input.addEventListener('blur', () => validateField(input as HTMLInputElement));
    input.addEventListener('input', () => {
      const errorElement = document.getElementById(`${input.id}-error`);
      if (errorElement && !errorElement.classList.contains('hidden')) {
        validateField(input as HTMLInputElement);
      }
    });
  });
  
  function validateField(field: HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement): boolean {
    const errorElement = document.getElementById(`${field.id}-error`);
    let errorMessage = '';
    
    if (field.hasAttribute('required') && !field.value.trim()) {
      errorMessage = 'Este campo es requerido';
    } else if (field.type === 'email' && field.value) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(field.value)) {
        errorMessage = 'Ingrese un email v√°lido';
      }
    } else if (field.type === 'tel' && field.value) {
      const phoneRegex = /^[\d\s\+\-\(\)]+$/;
      if (!phoneRegex.test(field.value)) {
        errorMessage = 'Ingrese un tel√©fono v√°lido';
      }
    }
    
    if (errorElement) {
      if (errorMessage) {
        errorElement.textContent = errorMessage;
        errorElement.classList.remove('hidden');
        field.classList.add('error');
        field.classList.remove('success');
        return false;
      } else {
        errorElement.classList.add('hidden');
        field.classList.remove('error');
        field.classList.add('success');
        return true;
      }
    }
    
    return !errorMessage;
  }
  
  // ‚îÄ‚îÄ TAB SWITCHER ‚îÄ‚îÄ
  const tabs = document.querySelectorAll('.cf-tab');
  const panels = document.querySelectorAll('.cf-panel');
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const target = (tab as HTMLElement).dataset.tab;
      tabs.forEach(t => {
        t.classList.remove('cf-tab--active');
        t.setAttribute('aria-selected', 'false');
      });
      panels.forEach(p => p.classList.remove('cf-panel--active'));
      tab.classList.add('cf-tab--active');
      tab.setAttribute('aria-selected', 'true');
      document.getElementById(target === 'wa' ? 'panelWA' : 'panelEmail')?.classList.add('cf-panel--active');
    });
  });

  // ‚îÄ‚îÄ WHATSAPP FORM SUBMIT ‚îÄ‚îÄ
  const waForm = document.getElementById('contactWAForm') as HTMLFormElement | null;
  if (waForm) {
    waForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const d = new FormData(waForm);
      const get = (k: string) => (d.get(k) as string || '').trim();
      const nombre    = get('nombre');
      const empresa   = get('empresa');
      const sector    = get('sector');
      const email     = get('email');
      const cel       = get('cel');
      const localidad = get('localidad');
      const provincia = get('provincia');
      const equipo    = get('equipo');
      const msg =
`\uD83D\uDD27 *SOLICITUD DE PRESUPUESTO - S3A Industrial*

\uD83D\uDC64 *Nombre:* ${nombre}
\uD83C\uDFED *Empresa:* ${empresa}${sector ? `\n\uD83D\uDCC2 *Sector:* ${sector}` : ''}
\uD83D\uDCE7 *Email:* ${email}
\uD83D\uDCF1 *Celular:* ${cel}${localidad ? `\n\uD83D\uDCCD *Localidad:* ${localidad}` : ''}${provincia ? ` - ${provincia}` : ''}
\u2699\uFE0F *Equipo:* ${equipo}

Hola, me comunico desde el sitio web para solicitar un presupuesto. Quedo a disposici\u00f3n para coordinar. \u00a1Gracias!`;
      const waNumber = (waForm.dataset.wa || '').replace(/\D/g, '');
      const url = `https://wa.me/${waNumber}?text=${encodeURIComponent(msg)}`;
      window.open(url, '_blank');
    });
  }

  // Submit del formulario
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Validar todos los campos
    let isValid = true;
    inputs?.forEach(input => {
      if (!validateField(input as HTMLInputElement)) {
        isValid = false;
      }
    });
    
    if (!isValid) {
      return;
    }
    
    // Mostrar estado de loading
    submitButton.classList.add('loading');
    submitButton.disabled = true;
    
    // Simular env√≠o (aqu√≠ integrar√≠as con tu backend o servicio de email)
    setTimeout(() => {
      // Mostrar mensaje de √©xito
      successMessage?.classList.remove('hidden');
      form.reset();
      
      // Remover clases de success de los campos
      inputs?.forEach(input => {
        input.classList.remove('success', 'error');
      });
      
      // Remover estado de loading
      submitButton.classList.remove('loading');
      submitButton.disabled = false;
      
      // Ocultar mensaje despu√©s de 5 segundos
      setTimeout(() => {
        successMessage?.classList.add('hidden');
      }, 5000);
      
      // Scroll al mensaje de √©xito
      successMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }, 2000);
  });
</script>
