/* ----- FORM WRAPPER ----- */
.form-card {
  background: #fff;
  border-radius: 16px;
  border: 1px solid rgba(170, 126, 86, 0.15);
  box-shadow: 0 4px 32px rgba(30, 49, 63, 0.07);
  padding: 2.2rem 2rem;
}

@media (max-width: 640px) {
  .form-card { padding: 1.5rem 1.2rem; }
}

/* Input fields con bordes animados */
.contact-input,
.contact-textarea,
.contact-select {
  width: 100%;
  padding: 0.78rem 1rem;
  border: 1.5px solid #d6cec5;
  border-radius: 8px;
  font-size: 0.95rem;
  font-family: inherit;
  color: #1e313f;
  background: #fafaf8;
  transition: all 0.25s ease;
  position: relative;
}

.contact-input::placeholder,
.contact-textarea::placeholder {
  color: #9ba8b4;
  font-size: 0.9rem;
}

.contact-input:focus,
.contact-textarea:focus,
.contact-select:focus {
  outline: none;
  background: #fff;
  border-color: #aa7e56;
  box-shadow: 
    0 0 0 3px rgba(170, 126, 86, 0.14),
    0 2px 10px rgba(170, 126, 86, 0.10);
  transform: translateY(-1px);
}

.contact-input:hover,
.contact-textarea:hover,
.contact-select:hover {
  border-color: #aa7e56;
}

/* Textarea específicamente */
.contact-textarea {
  min-height: 110px;
  resize: vertical;
}

/* Label con animación */
.contact-label {
  display: block;
  margin-bottom: 0.4rem;
  font-weight: 600;
  font-family: var(--font-heading);
  color: #1e313f;
  font-size: 0.82rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  transition: color 0.3s ease;
}

.contact-input:focus + .contact-label,
.contact-textarea:focus + .contact-label,
.contact-select:focus + .contact-label {
  color: #aa7e56;
}

/* Form group container */
.form-group {
  margin-bottom: 0;
  position: relative;
}

/* Input con ícono */
.input-with-icon {
  position: relative;
}

.input-icon {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-gray-medium);
  transition: color 0.3s ease;
  pointer-events: none;
}

.input-with-icon .contact-input {
  padding-left: 3rem;
}

.input-with-icon .contact-input:focus ~ .input-icon {
  color: var(--color-primary);
}

/* Botón submit con loading effect */
.contact-submit {
  width: 100%;
  padding: 0.95rem 1.5rem;
  font-size: 1rem;
  font-family: var(--font-heading);
  font-weight: 700;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  background: linear-gradient(135deg, #aa7e56 0%, #8b6644 60%, #7b5433 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(170, 126, 86, 0.35);
  margin-bottom: 0;
}

.contact-submit::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: left 0.5s ease;
}

.contact-submit:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 28px rgba(170, 126, 86, 0.45);
}

.contact-submit:hover::before {
  left: 100%;
}

.contact-submit:active {
  transform: translateY(0);
}

.contact-submit:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Loading state */
.contact-submit.loading {
  pointer-events: none;
}

.contact-submit.loading::after {
  content: '';
  position: absolute;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-top-color: var(--color-white);
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
  right: 1.5rem;
  top: 50%;
  transform: translateY(-50%);
}

@keyframes spin {
  to {
    transform: translateY(-50%) rotate(360deg);
  }
}

/* Validation states */
.contact-input.error,
.contact-textarea.error,
.contact-select.error {
  border-color: #dc2626;
}

.contact-input.success,
.contact-textarea.success,
.contact-select.success {
  border-color: #16a34a;
}

.error-message {
  color: #dc2626;
  font-size: 0.875rem;
  margin-top: 0.375rem;
  display: flex;
  align-items: center;
  gap: 0.25rem;
  animation: fadeIn 0.3s ease;
}

.success-message {
  color: #16a34a;
  font-size: 0.875rem;
  margin-top: 0.375rem;
  animation: fadeIn 0.3s ease;
}

