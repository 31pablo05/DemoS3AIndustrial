/* Section background */
.cf-section {
  position: relative;
  padding: 100px 0 110px;
  background: linear-gradient(170deg, #f7f4ef 0%, #f0ece4 50%, #f4f1ec 100%);
  overflow: hidden;
}

@media (max-width: 768px) {
  .cf-section { padding: 70px 0 80px; }
}

/* Top golden edge */
.cf-edge-top {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, transparent 0%, #aa7e56 30%, #cca373 60%, #aa7e56 80%, transparent 100%);
}

/* ----- HEADER ----- */
.cf-header {
  text-align: center;
  max-width: 600px;
  margin: 0 auto 3.5rem;
  overflow: visible;
}

.cf-eyebrow {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  margin-bottom: 1.25rem;
}

.cf-eyebrow-rule {
  flex: 1;
  max-width: 60px;
  height: 1px;
  background: linear-gradient(90deg, transparent, #aa7e56);
}

.cf-eyebrow-rule:last-child {
  background: linear-gradient(90deg, #aa7e56, transparent);
}

.cf-eyebrow-text {
  font-family: var(--font-heading);
  font-size: 0.72rem;
  font-weight: 700;
  letter-spacing: 0.22em;
  text-transform: uppercase;
  color: #aa7e56;
}

.cf-title {
  font-family: var(--font-display);
  font-size: clamp(3rem, 6vw, 5rem);
  font-weight: 400;
  line-height: 1;
  text-transform: uppercase;
  letter-spacing: 0.03em;
  color: #1e313f;
  margin-bottom: 0.6rem;
  overflow: visible;
}

.cf-title em {
  font-style: italic;
  display: inline-block;
  padding-right: 0.12em;
  background: linear-gradient(135deg, #aa7e56 0%, #cca373 50%, #8b6644 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.cf-scratch {
  width: 64px;
  height: 4px;
  border-radius: 2px;
  background: linear-gradient(90deg, #aa7e56, #cca373);
  margin: 0 auto 1.2rem;
}

.cf-subtitle {
  font-family: var(--font-body);
  font-size: 1.05rem;
  color: #334c60;
  line-height: 1.65;
  font-weight: 300;
  opacity: 0.85;
}

/* ----- FORM WRAPPER ----- */
.form-card {
  background: #fff;
  border-radius: 16px;
  border: 1px solid rgba(170, 126, 86, 0.15);
  box-shadow: 0 4px 32px rgba(30, 49, 63, 0.07);
  padding: 2.2rem 2rem;
}

@media (max-width: 640px) {
  .form-card { padding: 1.5rem 1.2rem; }
}

/* Input fields con bordes animados */
.contact-input,
.contact-textarea,
.contact-select {
  width: 100%;
  padding: 0.78rem 1rem;
  border: 1.5px solid #d6cec5;
  border-radius: 8px;
  font-size: 0.95rem;
  font-family: inherit;
  color: #1e313f;
  background: #fafaf8;
  transition: all 0.25s ease;
  position: relative;
}

.contact-input::placeholder,
.contact-textarea::placeholder {
  color: #9ba8b4;
  font-size: 0.9rem;
}

.contact-input:focus,
.contact-textarea:focus,
.contact-select:focus {
  outline: none;
  background: #fff;
  border-color: #aa7e56;
  box-shadow: 
    0 0 0 3px rgba(170, 126, 86, 0.14),
    0 2px 10px rgba(170, 126, 86, 0.10);
  transform: translateY(-1px);
}

.contact-input:hover,
.contact-textarea:hover,
.contact-select:hover {
  border-color: #aa7e56;
}

/* Textarea espec√≠ficamente */
.contact-textarea {
  min-height: 110px;
  resize: vertical;
}

/* Label con animaci√≥n */
.contact-label {
  display: block;
  margin-bottom: 0.4rem;
  font-weight: 600;
  font-family: var(--font-heading);
  color: #1e313f;
  font-size: 0.82rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  transition: color 0.3s ease;
