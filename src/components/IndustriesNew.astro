<style>
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  :root {
    --gold:       #aa7e56;
    --gold-light: #d4a574;
    --gold-pale:  #cca373;
    --gold-dark:  #7b5433;
    --navy:       #1e313f;
    --navy-mid:   #2d4558;
    --navy-soft:  #334c60;
    --navy-muted: #5a7889;
    --cream:      #fdfcfb;
    --white:      #ffffff;
    --border-gold: rgba(170,126,86,.18);
    --border-navy: rgba(30,49,63,.15);
    --shadow-sm:  0 2px 12px rgba(0,0,0,.06);
    --shadow-md:  0 8px 32px rgba(0,0,0,.10);
    --shadow-lg:  0 20px 60px rgba(0,0,0,.12);
    --radius-card: 24px;
    --radius-btn:  16px;
    --ease-out: cubic-bezier(.22,1,.36,1);
  }

  html { font-size: 16px; scroll-behavior: smooth; }

  body {
    font-family: var(--font-body);
    background: var(--white);
    color: var(--navy);
    -webkit-font-smoothing: antialiased;
  }

  /* ─── SECTION ─────────────────────────────────────────── */
  #sectores {
    position: relative;
    padding: 120px 0 140px;
    overflow: hidden;
    background: linear-gradient(180deg,
      #fff 0%, #faf8f5 40%, #f8f6f2 70%, #fff 100%);
  }

  /* Ambient orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
    will-change: transform;
  }
  .orb-1 {
    width: 560px; height: 560px;
    top: -80px; left: -120px;
    background: radial-gradient(circle, rgba(170,126,86,.13) 0%, transparent 70%);
    animation: drift1 14s ease-in-out infinite;
  }
  .orb-2 {
    width: 480px; height: 480px;
    bottom: 0; right: -100px;
    background: radial-gradient(circle, rgba(30,49,63,.10) 0%, transparent 70%);
    animation: drift2 18s ease-in-out infinite;
  }
  .orb-3 {
    width: 360px; height: 360px;
    top: 40%; left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle, rgba(123,84,51,.08) 0%, transparent 70%);
    animation: drift1 22s ease-in-out infinite reverse;
  }
  @keyframes drift1 {
    0%,100% { transform: translate(0,0) scale(1); }
    50%      { transform: translate(30px,20px) scale(1.05); }
  }
  @keyframes drift2 {
    0%,100% { transform: translate(0,0); }
    50%      { transform: translate(-25px,15px); }
  }

  /* Subtle grain texture overlay */
  #sectores::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 0;
    opacity: .4;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 32px;
    position: relative;
    z-index: 2;
  }

  /* ─── HEADER ──────────────────────────────────────────── */
  .section-header {
    text-align: center;
    max-width: 780px;
    margin: 0 auto 80px;
  }

  .eyebrow-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 22px;
    border-radius: 100px;
    background: rgba(170,126,86,.08);
    border: 1px solid rgba(170,126,86,.25);
    margin-bottom: 32px;
    backdrop-filter: blur(8px);
  }
  .eyebrow-badge .dot {
    width: 7px; height: 7px;
    border-radius: 50%;
    background: var(--gold);
    animation: pulse-dot 2s ease-in-out infinite;
  }
  @keyframes pulse-dot {
    0%,100% { opacity: 1; transform: scale(1); }
    50%      { opacity: .5; transform: scale(.75); }
  }
  .eyebrow-badge span {
    font-size: .78rem;
    font-weight: 700;
    letter-spacing: .12em;
    text-transform: uppercase;
    color: var(--gold);
  }

  .section-headline {
    font-family: var(--font-display);
    font-size: clamp(3rem, 5.5vw, 5rem);
    font-weight: 400;
    line-height: 1.0;
    color: var(--navy);
    margin-bottom: 28px;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }
  .section-headline em {
    font-style: italic;
    background: linear-gradient(135deg, var(--gold) 0%, var(--gold-light) 50%, var(--gold-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* animated underline */
  .underline-anim {
    position: relative;
    display: inline-block;
    padding-right: 0.12em;
  }
  .underline-anim::after {
    content: '';
    position: absolute;
    left: 0; bottom: -6px;
    height: 3px;
    width: 100%;
    border-radius: 2px;
    background: linear-gradient(90deg, var(--gold), var(--gold-light), var(--gold-dark));
    background-size: 200% 100%;
    animation: shimmer-line 3s linear infinite;
  }
  @keyframes shimmer-line {
    0%   { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .section-subtext {
    font-size: clamp(.95rem, 1.5vw, 1.15rem);
    line-height: 1.75;
    color: var(--navy-muted);
    font-weight: 400;
  }
  .section-subtext strong { color: var(--navy); font-weight: 700; }

  /* ─── THIN SEPARATOR LINE ─────────────────────────────── */
  .divider-line {
    width: 60px; height: 3px;
    border-radius: 2px;
    background: linear-gradient(90deg, var(--gold), var(--gold-light));
    margin: 0 auto 28px;
  }

  /* ─── CARDS GRID ──────────────────────────────────────── */
  .industries-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-bottom: 100px;
  }
  @media (max-width: 1100px) {
    .industries-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
  }
  @media (max-width: 600px) {
    .industries-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }
    .industry-card {
      padding: 16px 10px 14px;
      border-radius: 14px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .card-icon-wrap {
      width: 40px; height: 40px;
      border-radius: 11px;
      margin-bottom: 8px;
      flex-shrink: 0;
    }
    .card-icon-wrap svg { width: 18px; height: 18px; }
    .card-title { font-size: .72rem; margin-bottom: 3px; letter-spacing: 0; line-height: 1.2; }
    .card-subtitle { font-size: .6rem; letter-spacing: 0; line-height: 1.3; margin-bottom: 0; }
  }

  /* ─── SINGLE CARD ─────────────────────────────────────── */
  .industry-card {
    position: relative;
    background: var(--white);
    border-radius: var(--radius-card);
    padding: 28px 24px 24px;
    border: 1px solid rgba(170,126,86,.14);
    box-shadow: var(--shadow-sm);
    transition:
      transform .5s var(--ease-out),
      box-shadow .5s var(--ease-out),
      border-color .4s ease;
    cursor: pointer;
    overflow: hidden;
  }

  /* Top accent bar */
  .industry-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 3px;
    background: var(--card-accent, linear-gradient(90deg, #aa7e56, #d4a574));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform .5s var(--ease-out);
    border-radius: 24px 24px 0 0;
  }
  .industry-card:hover::before { transform: scaleX(1); }
  .industry-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 24px 64px rgba(0,0,0,.13);
    border-color: rgba(170,126,86,.30);
  }

  /* Glow bloom on hover */
  .card-glow {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: 0;
    transition: opacity .6s ease;
    pointer-events: none;
  }
  .industry-card:hover .card-glow { opacity: 1; }

  /* Number badge */
  .card-num { display: none; }

  /* Icon wrapper */
  .card-icon-wrap {
    width: 52px; height: 52px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    transition: transform .5s var(--ease-out);
    position: relative;
    z-index: 1;
  }
  .industry-card:hover .card-icon-wrap {
    transform: scale(1.08) rotate(5deg);
  }
  .card-icon-wrap svg {
    width: 28px; height: 28px;
    stroke: #fff;
  }

  /* Card text */
  .card-title {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--navy);
    margin-bottom: 6px;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }
  .card-subtitle {
    font-size: .82rem;
    font-weight: 500;
    color: var(--gold);
    letter-spacing: .04em;
    text-transform: uppercase;
    margin-bottom: 20px;
  }
  .card-divider {
    height: 1px;
    background: rgba(170,126,86,.12);
    margin-bottom: 20px;
  }
  .card-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .card-features li {
    display: flex;
    align-items: center;
    gap: 9px;
    font-size: .87rem;
    font-weight: 500;
    color: var(--navy-soft);
    line-height: 1.4;
  }
  .card-features li::before {
    content: '';
    width: 6px; height: 6px;
    border-radius: 50%;
    background: var(--gold);
    flex-shrink: 0;
  }

  /* Card hover CTA */
  .card-cta {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-top: 24px;
    font-size: .83rem;
    font-weight: 700;
    color: var(--gold);
    letter-spacing: .04em;
    opacity: 0;
    transform: translateY(6px);
    transition: opacity .4s ease, transform .4s var(--ease-out);
  }
  .industry-card:hover .card-cta {
    opacity: 1;
    transform: translateY(0);
  }
  .card-cta svg {
    width: 14px; height: 14px;
    stroke: var(--gold);
    transition: transform .4s var(--ease-out);
  }
  .industry-card:hover .card-cta svg { transform: translateX(4px); }

  /* ─── CARD VARIANTS ───────────────────────────────────── */
  /* gold */
  .card-gold { --card-accent: linear-gradient(90deg, #aa7e56, #d4a574); }
  .card-gold .card-icon-wrap { background: linear-gradient(135deg, #aa7e56, #d4a574); box-shadow: 0 8px 24px rgba(170,126,86,.30); }
  .card-gold .card-glow { background: radial-gradient(ellipse at 30% 0%, rgba(170,126,86,.07) 0%, transparent 60%); }

  /* navy */
  .card-navy { --card-accent: linear-gradient(90deg, #1e313f, #334c60); }
  .card-navy .card-icon-wrap { background: linear-gradient(135deg, #1e313f, #334c60); box-shadow: 0 8px 24px rgba(30,49,63,.30); }
  .card-navy .card-glow { background: radial-gradient(ellipse at 30% 0%, rgba(30,49,63,.06) 0%, transparent 60%); }
  .card-navy .card-num { color: var(--navy-soft); }
  .card-navy .card-features li::before { background: var(--navy-soft); }
  .card-navy .card-cta { color: var(--navy-soft); }
  .card-navy .card-cta svg { stroke: var(--navy-soft); }

  /* rust */
  .card-rust { --card-accent: linear-gradient(90deg, #7b5433, #aa7e56); }
  .card-rust .card-icon-wrap { background: linear-gradient(135deg, #7b5433, #aa7e56); box-shadow: 0 8px 24px rgba(123,84,51,.30); }
  .card-rust .card-glow { background: radial-gradient(ellipse at 30% 0%, rgba(123,84,51,.07) 0%, transparent 60%); }
  .card-rust .card-num { color: #7b5433; }
  .card-rust .card-subtitle { color: #7b5433; }
  .card-rust .card-features li::before { background: #7b5433; }
  .card-rust .card-cta { color: #7b5433; }
  .card-rust .card-cta svg { stroke: #7b5433; }

  /* dark */
  .card-dark { --card-accent: linear-gradient(90deg, #223546, #334c60); }
  .card-dark .card-icon-wrap { background: linear-gradient(135deg, #223546, #334c60); box-shadow: 0 8px 24px rgba(34,53,70,.30); }
  .card-dark .card-glow { background: radial-gradient(ellipse at 30% 0%, rgba(34,53,70,.06) 0%, transparent 60%); }
  .card-dark .card-num { color: var(--navy-mid); }
  .card-dark .card-subtitle { color: var(--navy-mid); }
  .card-dark .card-features li::before { background: var(--navy-mid); }
  .card-dark .card-cta { color: var(--navy-mid); }
  .card-dark .card-cta svg { stroke: var(--navy-mid); }

  /* warm */
  .card-warm { --card-accent: linear-gradient(90deg, #cca373, #aa7e56); }
  .card-warm .card-icon-wrap { background: linear-gradient(135deg, #cca373, #aa7e56); box-shadow: 0 8px 24px rgba(204,163,115,.30); }
  .card-warm .card-glow { background: radial-gradient(ellipse at 30% 0%, rgba(204,163,115,.07) 0%, transparent 60%); }
  .card-warm .card-num { color: #cca373; }
  .card-warm .card-subtitle { color: #cca373; }
  .card-warm .card-features li::before { background: #cca373; }
  .card-warm .card-cta { color: #cca373; }
  .card-warm .card-cta svg { stroke: #cca373; }

  /* dual */
  .card-dual { --card-accent: linear-gradient(90deg, #1e313f, #aa7e56); }
  .card-dual .card-icon-wrap { background: linear-gradient(135deg, #1e313f, #aa7e56); box-shadow: 0 8px 24px rgba(30,49,63,.28); }
  .card-dual .card-glow { background: radial-gradient(ellipse at 30% 0%, rgba(170,126,86,.06) 0%, transparent 60%); }

  /* ─── CTA BLOCK ───────────────────────────────────────── */
  .cta-block {
    position: relative;
    border-radius: 32px;
    overflow: hidden;
    padding: 80px 64px;
  }
  @media (max-width: 900px) { .cta-block { padding: 56px 36px; } }
  @media (max-width: 600px) { .cta-block { padding: 48px 24px; border-radius: 24px; } }

  .cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(145deg, #1e313f 0%, #2d4558 50%, #1a2c3a 100%);
    z-index: 0;
  }
  /* Gold mesh top-left */
  .cta-bg::before {
    content: '';
    position: absolute;
    top: -80px; left: -80px;
    width: 420px; height: 420px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(170,126,86,.22) 0%, transparent 65%);
    filter: blur(40px);
  }
  /* Gold mesh bottom-right */
  .cta-bg::after {
    content: '';
    position: absolute;
    bottom: -60px; right: -60px;
    width: 380px; height: 380px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(212,165,116,.18) 0%, transparent 65%);
    filter: blur(40px);
  }

  /* thin top gold line */
  .cta-line {
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 2px;
    background: linear-gradient(90deg,
      transparent 0%, var(--gold) 30%, var(--gold-light) 50%, var(--gold) 70%, transparent 100%);
    z-index: 1;
  }

  .cta-inner {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 56px;
  }
  @media (max-width: 900px) {
    .cta-inner { grid-template-columns: 1fr; gap: 40px; text-align: center; }
  }

  /* Stats grid inside CTA */
  .cta-stats {
    display: flex;
    gap: 36px;
    margin: 32px 0 40px;
    flex-wrap: wrap;
  }
  @media (max-width: 900px) { .cta-stats { justify-content: center; } }

  .stat-item { display: flex; flex-direction: column; }
  .stat-num {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 400;
    color: var(--gold-light);
    line-height: 1;
    margin-bottom: 4px;
    letter-spacing: 0.02em;
  }
  .stat-label {
    font-size: .78rem;
    font-weight: 600;
    letter-spacing: .08em;
    text-transform: uppercase;
    color: rgba(255,255,255,.45);
  }

  .cta-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: .76rem;
    font-weight: 700;
    letter-spacing: .14em;
    text-transform: uppercase;
    color: var(--gold-light);
    margin-bottom: 18px;
  }
  .cta-eyebrow::before {
    content: '';
    display: block;
    width: 28px; height: 1px;
    background: var(--gold-light);
  }

  .cta-headline {
    font-family: var(--font-display);
    font-size: clamp(2rem, 3.5vw, 3.2rem);
    font-weight: 400;
    color: var(--white);
    line-height: 1.15;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }
  .cta-headline em {
    font-style: italic;
    color: var(--gold-light);
  }

  .cta-body {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255,255,255,.62);
    max-width: 540px;
    margin-top: 16px;
  }
  .cta-body strong { color: rgba(255,255,255,.88); font-weight: 600; }

  /* Trust pills row */
  .cta-trust {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 36px;
  }
  @media (max-width: 900px) { .cta-trust { justify-content: center; } }

  .trust-pill {
    display: inline-flex;
    align-items: center;
    gap: 7px;
    padding: 7px 14px;
    border-radius: 100px;
    background: rgba(255,255,255,.07);
    border: 1px solid rgba(255,255,255,.10);
    font-size: .78rem;
    font-weight: 600;
    color: rgba(255,255,255,.70);
    transition: background .3s;
  }
  .trust-pill:hover { background: rgba(255,255,255,.12); }
  .trust-pill svg { width: 13px; height: 13px; color: var(--gold-light); }

  /* Buttons column */
  .cta-actions {
    display: flex;
    flex-direction: column;
    gap: 14px;
    align-items: flex-end;
    flex-shrink: 0;
    min-width: 220px;
  }
  @media (max-width: 900px) {
    .cta-actions { align-items: center; flex-direction: row; justify-content: center; flex-wrap: wrap; }
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 30px;
    border-radius: var(--radius-btn);
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: .95rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    transition: transform .4s var(--ease-out), box-shadow .4s ease;
    white-space: nowrap;
    border: none;
    cursor: pointer;
  }
  .btn:hover { transform: translateY(-3px); }

  .btn-primary {
    background: linear-gradient(135deg, #aa7e56 0%, #7b5433 100%);
    color: #fff;
    box-shadow: 0 10px 32px rgba(170,126,86,.40);
    width: 100%;
    justify-content: center;
  }
  .btn-primary:hover { box-shadow: 0 16px 40px rgba(170,126,86,.50); }

  .btn-ghost {
    background: rgba(255,255,255,.07);
    border: 1px solid rgba(255,255,255,.18);
    color: rgba(255,255,255,.82);
    width: 100%;
    justify-content: center;
    backdrop-filter: blur(4px);
  }
  .btn-ghost:hover {
    background: rgba(255,255,255,.12);
    box-shadow: 0 8px 24px rgba(0,0,0,.15);
  }

  .btn svg { width: 16px; height: 16px; flex-shrink: 0; }
  .btn-arrow {
    width: 14px; height: 14px;
    margin-left: 4px;
    transition: transform .4s var(--ease-out);
  }
  .btn:hover .btn-arrow { transform: translateX(4px); }

  /* ─── ENTRY ANIMATIONS ────────────────────────────────── */
  .reveal {
    opacity: 0;
    transform: translateY(32px);
    transition: opacity .7s ease, transform .7s var(--ease-out);
  }
  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }
  .reveal-delay-1 { transition-delay: .10s; }
  .reveal-delay-2 { transition-delay: .18s; }
  .reveal-delay-3 { transition-delay: .26s; }
  .reveal-delay-4 { transition-delay: .34s; }
  .reveal-delay-5 { transition-delay: .42s; }
  .reveal-delay-6 { transition-delay: .50s; }
  .reveal-delay-7 { transition-delay: .58s; }
  .reveal-delay-8 { transition-delay: .66s; }

  /* ─── RESPONSIVE TWEAKS ───────────────────────────────── */
  @media (max-width: 1280px) {
    .container { padding: 0 24px; }
  }
  @media (max-width: 768px) {
    #sectores { padding: 80px 0 100px; }
    .section-header { margin-bottom: 56px; }
    .industries-grid { margin-bottom: 64px; }
    .cta-block { padding: 48px 24px; }
    .stat-num { font-size: 1.8rem; }
  }
  @media (max-width: 480px) {
    .container { padding: 0 12px; }
    .cta-headline { font-size: 1.6rem; }
  }
</style>

