<style>
  /* Glassmorphism mejorado con gradiente sutil */
  #header {
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(255, 255, 255, 0.90) 100%
    );
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    border-bottom: 1px solid rgba(0, 0, 0, 0.03);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.02);
  }
  
  #header.scrolled {
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.98) 0%,
      rgba(255, 255, 255, 0.96) 100%
    );
    backdrop-filter: blur(16px) saturate(200%);
    -webkit-backdrop-filter: blur(16px) saturate(200%);
    box-shadow: 
      0 4px 30px rgba(0, 0, 0, 0.08),
      0 1px 3px rgba(0, 0, 0, 0.05);
    border-bottom-color: rgba(0, 0, 0, 0.08);
  }
  
  #header.scrolled #header-gradient {
    opacity: 1;
  }
  
  /* Nav links con efecto underline animado mejorado */
  .nav-link {
    position: relative;
    font-size: 0.9375rem;
    letter-spacing: -0.01em;
  }
  
  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 85%;
    height: 3px;
    background: linear-gradient(90deg, 
      var(--color-rust) 0%, 
      var(--color-primary) 50%, 
      var(--color-rust) 100%);
    border-radius: 3px;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    transform-origin: center;
    box-shadow: 0 2px 8px rgba(100, 66, 57, 0.3);
  }
  
  .nav-link:hover::before {
    transform: translateX(-50%) scaleX(1);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    inset: -4px;
    background: linear-gradient(135deg, 
      rgba(100, 66, 57, 0.05) 0%, 
      rgba(143, 111, 81, 0.05) 100%);
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }
  
  .nav-link:hover::after {
    opacity: 1;
  }
  
  .nav-link:active {
    transform: scale(0.96);
  }
  
  /* CTA Button con gradiente animado y efectos 3D */
  .cta-button {
    background: linear-gradient(135deg, 
      #644239 0%, 
      var(--color-rust) 35%,
      #8f6f51 65%, 
      var(--color-rust) 100%);
    background-size: 300% 300%;
    background-position: 0% 50%;
    position: relative;
    border: 1px solid rgba(100, 66, 57, 0.3);
    box-shadow: 
      0 4px 15px rgba(100, 66, 57, 0.3),
      0 2px 8px rgba(100, 66, 57, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }
  
  .cta-button::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.2) 0%,
      rgba(255, 255, 255, 0) 50%,
      rgba(255, 255, 255, 0.15) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  
  .cta-button::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }
  
  .cta-button:hover {
    background-position: 100% 50%;
    transform: translateY(-3px) scale(1.03);
    box-shadow: 
      0 8px 25px rgba(100, 66, 57, 0.4),
      0 4px 15px rgba(100, 66, 57, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }
  
  .cta-button:hover::before {
    opacity: 1;
  }
  
  .cta-button:hover::after {
    width: 400px;
    height: 400px;
  }
  
  .cta-button:active {
    transform: translateY(-1px) scale(0.98);
    box-shadow: 
      0 4px 15px rgba(100, 66, 57, 0.3),
      0 2px 8px rgba(100, 66, 57, 0.2);
  }
  
  /* Phone link hover effect */
  .phone-link {
    position: relative;
  }
  
  .phone-link::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, 
      rgba(100, 66, 57, 0.08) 0%, 
      rgba(143, 111, 81, 0.08) 100%);
    border-radius: 8px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }
  
  .phone-link:hover::before {
    opacity: 1;
  }
  
  /* Logo animación mejorada */
  .logo-link {
    position: relative;
  }
  
  .logo-link:hover .logo-text {
    background: linear-gradient(135deg, 
      var(--color-rust) 0%, 
      var(--color-primary) 50%, 
      var(--color-rust) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 2s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  /* Mobile menu animation mejorada */
  #mobile-menu {
    animation: slideDownBounce 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  @keyframes slideDownBounce {
    0% {
      opacity: 0;
      transform: translateY(-30px) scale(0.9);
    }
    60% {
