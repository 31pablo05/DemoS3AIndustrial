<!-- ══════════════════════════════════════════════ CSS ══════════════════════════════════════════════ -->
<style>
  /* ── Variables rápidas ── */
  :root {
    --rust-hex: #9B4A2A;
    --rust-dark: #7a3a20;
    --panel-bg-from: #1a1614;
    --panel-bg-to: #261e1b;
  }

  /* ── Barra superior ── */
  .header-top-bar {
    background: linear-gradient(90deg, var(--color-rust) 0%, var(--color-primary) 50%, var(--color-rust) 100%);
    background-size: 200% 100%;
    animation: topBarFlow 4s ease infinite;
    opacity: 0.9;
  }
  @keyframes topBarFlow {
    0%,100% { background-position: 0% 50%; }
    50%      { background-position: 100% 50%; }
  }

  /* ── Header base ── */
  #header {
    background: rgba(255,255,255,0.92);
    backdrop-filter: blur(14px) saturate(180%);
    -webkit-backdrop-filter: blur(14px) saturate(180%);
    border-bottom: 1px solid rgba(0,0,0,0.04);
    box-shadow: 0 1px 18px rgba(0,0,0,0.04);
  }
  #header.scrolled {
    background: rgba(255,255,255,0.98);
    backdrop-filter: blur(20px) saturate(220%);
    -webkit-backdrop-filter: blur(20px) saturate(220%);
    box-shadow: 0 4px 28px rgba(0,0,0,0.10), 0 1px 0 rgba(0,0,0,0.04);
    border-bottom-color: rgba(0,0,0,0.07);
  }

  /* ── Logo ── */
  .logo-name {
    background: linear-gradient(135deg, #1a1a1a 0%, #3d2e28 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 0.3s ease;
  }
  .logo-link:hover .logo-name {
    background: linear-gradient(135deg, var(--color-rust) 0%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .logo-sub { color: var(--color-rust); transition: opacity 0.3s ease; }

  /* ── Desktop Nav links ── */
  .nav-link {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #4a4a4a;
    border-radius: 10px;
    position: relative;
    transition: color 0.25s ease, background 0.25s ease, transform 0.2s ease;
    letter-spacing: -0.01em;
  }
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 14px;
    right: 14px;
    height: 2px;
    background: linear-gradient(90deg, var(--color-rust), var(--color-primary));
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 0.35s cubic-bezier(0.34,1.56,0.64,1);
    transform-origin: center;
  }
  .nav-link:hover { color: var(--color-rust); background: rgba(155,74,42,0.06); }
  .nav-link:hover::after { transform: scaleX(1); }
  .nav-link:active { transform: scale(0.96); }
  .nav-link.active { color: var(--color-rust); font-weight: 700; }
  .nav-link.active::after { transform: scaleX(1); }

  .nav-icon {
    width: 15px;
    height: 15px;
    opacity: 0.5;
    flex-shrink: 0;
    transition: opacity 0.25s ease;
  }
  .nav-link:hover .nav-icon, .nav-link.active .nav-icon { opacity: 1; }

  /* ── Phone chip ── */
  .phone-chip { transition: all 0.3s ease; }

  /* ── CTA Button ── */
  .cta-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.875rem;
    color: #fff;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 14px rgba(155,74,42,0.35), 0 1px 4px rgba(155,74,42,0.2), inset 0 1px 0 rgba(255,255,255,0.15);
    border: 1px solid rgba(255,255,255,0.1);
    white-space: nowrap;
  }
  .cta-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #7a3a20 0%, var(--color-rust) 50%, #9B6A3A 100%);
    background-size: 200% 200%;
    transition: background-position 0.5s ease;
  }
  .cta-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(105deg, transparent 40%, rgba(255,255,255,0.18) 50%, transparent 60%);
    background-size: 200% 100%;
    background-position: 200% 0;
    transition: background-position 0.6s ease;
  }
  .cta-button:hover { transform: translateY(-2px) scale(1.02); box-shadow: 0 8px 24px rgba(155,74,42,0.45), 0 2px 8px rgba(155,74,42,0.25), inset 0 1px 0 rgba(255,255,255,0.2); }
  .cta-button:hover .cta-bg { background-position: 100% 100%; }
  .cta-button:hover .cta-shimmer { background-position: -200% 0; }
  .cta-button:active { transform: translateY(0) scale(0.98); }

  /* ── Hamburger ── */
  .hamburger {
    background: #223546;
    border: 1px solid #2e4a61;
    box-shadow: 0 2px 8px rgba(34,53,70,0.25);
  }
  .hamburger:hover {
    background: #2c4760;
    border-color: #3a5f7d;
    box-shadow: 0 4px 14px rgba(34,53,70,0.35);
    transform: scale(1.05);
  }
  .hamburger.is-open {
    background: #1a2b38;
    border-color: #223546;
    box-shadow: 0 2px 10px rgba(34,53,70,0.4);
  }
  .hamburger-lines {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 20px;
  }
  .hline {
    display: block;
    height: 2px;
    border-radius: 2px;
    background: #ffffff;
    transition: all 0.35s cubic-bezier(0.68,-0.55,0.265,1.55);
    transform-origin: center;
  }
  .hamburger.is-open .hline { background: #fff; }
  .hamburger.is-open .hline-1 { transform: translateY(7px) rotate(45deg); }
  .hamburger.is-open .hline-2 { transform: scaleX(0); opacity: 0; }
  .hamburger.is-open .hline-3 { transform: translateY(-7px) rotate(-45deg); }

  /* ── Mobile Overlay ── */
  #mobile-overlay.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  /* ── Mobile Panel ── */
  #mobile-panel {
    background: #ffffff;
    border: 1px solid rgba(0,0,0,0.08);
    box-shadow: 0 20px 60px rgba(0,0,0,0.15), 0 4px 16px rgba(0,0,0,0.08);
    transform: translateY(-12px) scale(0.96);
    opacity: 0;
    pointer-events: none;
    transition: transform 0.3s cubic-bezier(0.34,1.56,0.64,1), opacity 0.25s ease;
  }
  #mobile-panel.is-open {
    transform: translateY(0) scale(1);
    opacity: 1;
    pointer-events: auto;
  }

  /* Panel nav container */
  .panel-nav {
    /* sin estilos extra, el card es el fondo */
  }

  /* Mobile Nav Items */
  .mobile-nav-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 10px;
    border-radius: 10px;
    color: #374151;
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
  }
  .mobile-nav-item:hover {
    background: #f3f4f6;
    color: #111827;
  }
  .mobile-nav-item:hover svg:last-child { opacity: 60; transform: translateX(2px); }
  .mobile-nav-item.active {
    background: rgba(155,74,42,0.08);
    color: var(--color-rust);
    font-weight: 700;
  }
  .mobile-nav-item.active .mobile-nav-icon-wrap {
    background: rgba(155,74,42,0.15);
  }
  .mobile-nav-item:active { transform: scale(0.98); }

  .mobile-nav-icon-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: #f3f4f6;
    color: #223546;
    flex-shrink: 0;
    transition: background 0.2s ease, color 0.2s ease;
  }
  .mobile-nav-item:hover .mobile-nav-icon-wrap {
    background: #e5e7eb;
    color: #223546;
  }

  .panel-cta {
    background: linear-gradient(135deg, #223546 0%, #2e4a61 100%);
    box-shadow: 0 3px 12px rgba(34,53,70,0.3);
    transition: all 0.25s ease;
  }
  .panel-cta:hover { transform: translateY(-1px); box-shadow: 0 5px 16px rgba(34,53,70,0.4); }
  .panel-cta:active { transform: scale(0.98); }

  /* ── Pulse animations ── */
  .phone-pulse {
    animation: phonePulse 2s ease-in-out infinite;
  }
  @keyframes phonePulse {
