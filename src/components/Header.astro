      <!-- ── Desktop CTA ── -->
      <div class="hidden lg:flex items-center gap-3">
        <!-- Teléfono -->
        <a href="tel:+1234567890" class="phone-chip group hidden xl:flex items-center gap-2 px-3.5 py-2 rounded-lg border border-gray-200 hover:border-rust/40 transition-all duration-300 bg-white/60 hover:bg-rust/5">
          <div class="relative shrink-0">
