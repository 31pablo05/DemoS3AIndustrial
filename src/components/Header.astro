            <span class="absolute -top-0.5 -right-0.5 w-1.5 h-1.5 bg-green-500 rounded-full phone-pulse"></span>
          </div>
          <div class="flex flex-col leading-none">
            <span class="text-[9px] text-gray-400 font-semibold tracking-widest uppercase">Disponible</span>
            <span class="text-xs font-bold text-gray-800">+1 (234) 567-890</span>
          </div>
        </a>
        <!-- Botón CTA -->
        <a href="/contacto" class="cta-button group">
          <span class="cta-bg"></span>
          <span class="cta-shimmer"></span>
          <span class="relative z-10 flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
            Solicitar Servicio
          </span>
        </a>
      </div>

      <!-- ── Hamburger Mobile ── -->
      <button
        id="mobile-menu-button"
        class="hamburger lg:hidden relative z-50 w-11 h-11 flex items-center justify-center rounded-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-[#223546]/30"
        aria-label="Abrir menú"
        aria-expanded="false"
      >
        <div class="hamburger-lines">
          <span class="hline hline-1"></span>
          <span class="hline hline-2"></span>
          <span class="hline hline-3"></span>
        </div>
      </button>

    </div>
  </nav>
</header>

