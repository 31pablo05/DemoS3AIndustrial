<style>
/* ════════════════════════════════════════════
   ROOT & RESET
════════════════════════════════════════════ */
:root {
  --primary:      #1e313f;
  --secondary:    #223546;
  --steel:        #334c60;
  --rust:         #7b5433;
  --golden:       #aa7e56;
  --golden-light: #cca373;
  --golden-dark:  #8b6644;
  --white:        #ffffff;
  --ease:         cubic-bezier(.22,1,.36,1);
  --ease-spring:  cubic-bezier(.34,1.56,.64,1);
}

/* ════════════════════════════════════════════
   SECTION
════════════════════════════════════════════ */
#cta-final {
  position: relative;
  overflow: hidden;
  padding: 130px 0 140px;

  /* rich dark layered background */
  background:
    linear-gradient(175deg, #141f27 0%, #1a2d3a 35%, #1e3040 65%, #16252f 100%);
}

/* ─── decorative angled band across middle ─── */
#cta-final::before {
  content: '';
  position: absolute;
  top: 50%; left: -10%;
  right: -10%;
  height: 420px;
  transform: translateY(-50%) rotate(-3deg);
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(170,126,86,.045) 30%,
    rgba(204,163,115,.06) 50%,
    rgba(170,126,86,.045) 70%,
    transparent 100%
  );
  pointer-events: none;
  z-index: 0;
}

/* ─── fine grid plate overlay ─── */
#cta-final::after {
  content: '';
  position: absolute;
  inset: 0;
  background:
    repeating-linear-gradient(
      90deg,
      transparent 0px, transparent 79px,
      rgba(255,255,255,.016) 79px, rgba(255,255,255,.016) 80px
    ),
    repeating-linear-gradient(
      0deg,
      transparent 0px, transparent 79px,
      rgba(255,255,255,.016) 79px, rgba(255,255,255,.016) 80px
    );
  pointer-events: none;
  z-index: 0;
}

/* ─── Logo watermark badge ─── */
.cta-logo-badge {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: min(860px, 95vw);
  height: auto;
  opacity: 0.18;
  pointer-events: none;
  z-index: 1;
  animation: float-logo 10s ease-in-out infinite;
  filter: drop-shadow(0 0 80px rgba(170,126,86,.40));
}
@keyframes float-logo {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50%       { transform: translate(-50%, -52%) scale(1.03); }
}
@media(max-width: 768px) {
  .cta-logo-badge {
    width: min(560px, 98vw);
    opacity: 0.15;
  }
}

/* ─── ambient gold orbs ─── */
.cta-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(80px);
  pointer-events: none;
  z-index: 0;
}
.cta-orb-1 {
  width: 600px; height: 600px;
  top: -160px; left: -120px;
  background: radial-gradient(circle, rgba(170,126,86,.12) 0%, transparent 65%);
  animation: orb-drift-a 18s ease-in-out infinite;
}
.cta-orb-2 {
  width: 500px; height: 500px;
  bottom: -120px; right: -80px;
  background: radial-gradient(circle, rgba(123,84,51,.10) 0%, transparent 65%);
  animation: orb-drift-b 22s ease-in-out infinite;
}
.cta-orb-3 {
  width: 300px; height: 300px;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
  background: radial-gradient(circle, rgba(204,163,115,.06) 0%, transparent 65%);
  animation: orb-drift-a 12s ease-in-out infinite reverse;
}
@keyframes orb-drift-a { 0%,100%{transform:translate(0,0)} 50%{transform:translate(24px,18px)} }
@keyframes orb-drift-b { 0%,100%{transform:translate(0,0)} 50%{transform:translate(-20px,22px)} }

/* top & bottom edge lines */
.cta-edge-top,
.cta-edge-bottom {
  position: absolute;
  left: 0; right: 0;
  height: 2px;
  z-index: 2;
  pointer-events: none;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(170,126,86,.4) 20%,
    var(--golden-light) 50%,
    rgba(170,126,86,.4) 80%,
    transparent 100%
  );
}
.cta-edge-top  { top: 0; }
.cta-edge-bottom { bottom: 0; opacity:.35; }

/* ════════════════════════════════════════════
   CONTAINER
════════════════════════════════════════════ */
.cta-container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 36px;
  position: relative;
  z-index: 2;
  text-align: center;
}
@media(max-width:600px){ .cta-container{ padding: 0 20px; } }

/* ════════════════════════════════════════════
   EYEBROW
════════════════════════════════════════════ */
.cta-eyebrow {
  display: inline-flex;
  align-items: center;
  gap: 14px;
  margin-bottom: 36px;
}
.cta-eyebrow-line {
  width: 40px; height: 2px;
  border-radius: 2px;
  background: linear-gradient(90deg, transparent, var(--golden-light));
}
.cta-eyebrow-line.r {
  background: linear-gradient(90deg, var(--golden-light), transparent);
}
.cta-eyebrow-text {
  font-family: 'Barlow Condensed', sans-serif;
  font-size: .75rem;
  font-weight: 700;
  letter-spacing: .20em;
  text-transform: uppercase;
  color: var(--golden-light);
}

/* ════════════════════════════════════════════
   HEADLINE
════════════════════════════════════════════ */
.cta-headline {
  font-family: 'Cormorant Garamond', serif;
  font-size: clamp(2.6rem, 5.5vw, 5rem);
  font-weight: 700;
  color: var(--white);
  line-height: 1.06;
  letter-spacing: -.03em;
  margin-bottom: 28px;
}
@media (min-width: 768px) {
  .cta-headline { white-space: nowrap; }
}
.cta-headline em {
  font-style: italic;
  color: var(--golden-light);
}

/* scratch underline */
.cta-scratch {
  display: block;
  width: 70px; height: 4px;
  margin: 0 auto 32px;
  background: linear-gradient(90deg, var(--rust), var(--golden), var(--golden-light));
  border-radius: 2px;
  position: relative;
}
.cta-scratch::after {
  content: '';
  position: absolute;
  left: 0; top: 7px;
  width: 42px; height: 2px;
  background: rgba(170,126,86,.3);
  border-radius: 2px;
}

.cta-subtext {
  font-size: clamp(1rem, 1.6vw, 1.2rem);
  line-height: 1.78;
  color: rgba(255,255,255,.55);
  max-width: 700px;
  margin: 0 auto 64px;
}
.cta-subtext strong { color: rgba(255,255,255,.82); font-weight: 600; }

/* ════════════════════════════════════════════
   FEATURE CARDS ROW
════════════════════════════════════════════ */
.cta-features {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  max-width: 820px;
  margin: 0 auto 64px;
}
@media(max-width:720px){
  .cta-features { grid-template-columns: 1fr; gap: 12px; max-width: 420px; }
}

.cta-feat {
  position: relative;
  border-radius: 18px;
  padding: 32px 24px;
  background: rgba(255,255,255,.04);
  border: 1px solid rgba(255,255,255,.08);
  backdrop-filter: blur(6px);
  transition: background .4s ease, border-color .4s ease, transform .5s var(--ease);
  overflow: hidden;
}
.cta-feat:hover {
  background: rgba(255,255,255,.07);
  border-color: rgba(170,126,86,.30);
  transform: translateY(-5px);
}

/* top accent line – colored per card */
.cta-feat::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 2px;
  background: var(--feat-line, linear-gradient(90deg, var(--golden-dark), var(--golden)));
  transform: scaleX(0);
  transform-origin: left;
  border-radius: 18px 18px 0 0;
  transition: transform .5s var(--ease);
}
.cta-feat:hover::before { transform: scaleX(1); }

/* corner glow */
.cta-feat::after {
  content: '';
  position: absolute;
  bottom: -20px; right: -20px;
  width: 80px; height: 80px;
  border-radius: 50%;
  background: var(--feat-glow, rgba(170,126,86,.06));
  pointer-events: none;
}

.feat-icon-circle {
  width: 54px; height: 54px;
  border-radius: 50%;
  background: rgba(170,126,86,.12);
  border: 1px solid rgba(170,126,86,.22);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  transition: transform .5s var(--ease-spring), background .3s ease;
}
.cta-feat:hover .feat-icon-circle {
  transform: scale(1.12) rotate(-8deg);
  background: rgba(170,126,86,.20);
}
.feat-icon-circle svg { width: 22px; height: 22px; stroke: var(--golden-light); }

.feat-title {
  font-family: 'Cormorant Garamond', serif;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--white);
  margin-bottom: 10px;
  letter-spacing: -.01em;
}
.feat-body {
  font-size: .85rem;
  line-height: 1.70;
  color: rgba(255,255,255,.48);
}

/* card variants */
.cta-feat-1 { --feat-line: linear-gradient(90deg, #aa7e56, #cca373); --feat-glow: rgba(170,126,86,.07); }
.cta-feat-2 { --feat-line: linear-gradient(90deg, #334c60, #aa7e56); --feat-glow: rgba(51,76,96,.07); }
.cta-feat-3 { --feat-line: linear-gradient(90deg, #7b5433, #aa7e56); --feat-glow: rgba(123,84,51,.07); }

/* ════════════════════════════════════════════
   CTA BUTTONS
════════════════════════════════════════════ */
.cta-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 16px;
  margin-bottom: 52px;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 18px 36px;
  border-radius: 16px;
  font-family: 'Barlow', sans-serif;
  font-weight: 700;
  font-size: 1rem;
  text-decoration: none;
  transition: transform .45s var(--ease), box-shadow .4s ease;
  white-space: nowrap;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}
.btn svg { width: 18px; height: 18px; flex-shrink: 0; }
.btn-arrow { transition: transform .4s var(--ease); }
.btn:hover .btn-arrow { transform: translateX(5px); }
.btn:hover { transform: translateY(-4px); }

/* shimmer layer */
.btn::after {
  content: '';
  position: absolute;
  top: 0; left: -100%;
  width: 60%; height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,.18), transparent);
  transition: left .55s ease;
}
.btn:hover::after { left: 140%; }

.btn-gold {
  background: linear-gradient(135deg, var(--golden-dark) 0%, var(--golden) 60%, var(--golden-light) 100%);
  color: var(--white);
  box-shadow: 0 10px 36px rgba(170,126,86,.45), 0 4px 12px rgba(170,126,86,.25);
}
.btn-gold:hover {
  box-shadow: 0 18px 48px rgba(170,126,86,.55), 0 6px 16px rgba(170,126,86,.30);
}

.btn-glass {
  background: rgba(255,255,255,.07);
  border: 1.5px solid rgba(204,163,115,.40);
  color: rgba(255,255,255,.85);
  backdrop-filter: blur(8px);
}
.btn-glass:hover {
  background: rgba(255,255,255,.12);
  border-color: var(--golden-light);
  box-shadow: 0 8px 28px rgba(204,163,115,.20);
}

/* ════════════════════════════════════════════
   TRUST STRIP
════════════════════════════════════════════ */
.cta-trust {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 8px;
}

/* divider dot between items */
.trust-sep {
  width: 3px; height: 3px;
  border-radius: 50%;
  background: rgba(255,255,255,.18);
  flex-shrink: 0;
}
@media(max-width:560px){ .trust-sep{ display:none; } }

.trust-item {
  display: flex;
  align-items: center;
  gap: 7px;
  font-size: .8rem;
  font-weight: 600;
  color: rgba(255,255,255,.45);
  letter-spacing: .03em;
  padding: 6px 0;
}
.trust-item svg { width: 13px; height: 13px; stroke: var(--golden); flex-shrink: 0; }

/* ════════════════════════════════════════════
   URGENCY BADGE (floating)
════════════════════════════════════════════ */
.urgency-badge {
  display: inline-flex;
  align-items: center;
  gap: 9px;
  padding: 10px 20px;
  border-radius: 100px;
  background: rgba(123,84,51,.18);
  border: 1px solid rgba(123,84,51,.35);
  margin-bottom: 32px;
}
.urgency-dot {
  width: 7px; height: 7px;
  border-radius: 50%;
  background: #f97316;
  animation: blink-orange 1.8s ease-in-out infinite;
  flex-shrink: 0;
}
@keyframes blink-orange {
  0%,100%{ opacity:1; transform:scale(1); }
  50%    { opacity:.4; transform:scale(.7); }
}
.urgency-text {
  font-family: 'Barlow Condensed', sans-serif;
  font-size: .74rem;
  font-weight: 700;
  letter-spacing: .14em;
  text-transform: uppercase;
  color: rgba(255,255,255,.60);
}
.urgency-text strong { color: #fdba74; }

/* ════════════════════════════════════════════
   REVEAL ANIMATIONS
════════════════════════════════════════════ */
.reveal {
  opacity: 0;
  transform: translateY(24px);
  transition: opacity .65s ease, transform .65s var(--ease);
}
.reveal.visible { opacity:1; transform:translateY(0); }
.d1{transition-delay:.06s}
.d2{transition-delay:.14s}
.d3{transition-delay:.22s}
.d4{transition-delay:.30s}
.d5{transition-delay:.38s}
.d6{transition-delay:.46s}
</style>

