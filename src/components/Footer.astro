.social-btn svg { width: 17px; height: 17px; }
.social-btn:hover {
  background: rgba(170,126,86,.20);
  border-color: rgba(170,126,86,.40);
  color: var(--golden-light);
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(170,126,86,.20);
}

/* ═══════════════════════════════════════
   NAV COLUMNS
═══════════════════════════════════════ */
.footer-col-title {
  font-family: var(--font-heading);
  font-size: .72rem;
  font-weight: 700;
  letter-spacing: .18em;
  text-transform: uppercase;
  color: var(--golden);
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  gap: 10px;
}
.footer-col-title::after {
  content: '';
  flex: 1;
  height: 1px;
  background: rgba(255,255,255,.07);
}

/* ─── links ─── */
.footer-links {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.footer-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 7px 0;
  font-size: .9rem;
  font-weight: 500;
  color: rgba(255,255,255,.48);
  text-decoration: none;
  transition: color .3s ease, gap .3s ease;
  position: relative;
}
.footer-link::before {
  content: '';
  width: 14px; height: 1px;
  background: var(--golden);
  opacity: 0;
  flex-shrink: 0;
  transition: opacity .3s ease, width .3s ease;
}
.footer-link:hover {
  color: rgba(255,255,255,.85);
  gap: 11px;
}
.footer-link:hover::before {
  opacity: 1;
}

/* ─── contact items ─── */
.contact-list {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.contact-item {
  display: flex;
  flex-direction: column;
  gap: 3px;
