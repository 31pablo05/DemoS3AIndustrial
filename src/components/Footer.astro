<style>
/* ═══════════════════════════════════════
   ROOT & RESET
═══════════════════════════════════════ */
:root {
  --primary:      #1e313f;
  --secondary:    #223546;
  --steel:        #334c60;
  --rust:         #7b5433;
  --golden:       #aa7e56;
  --golden-light: #cca373;
  --golden-dark:  #8b6644;
  --bg-cream:     #f4f1ec;
  --white:        #ffffff;

  --ease: cubic-bezier(.22,1,.36,1);
}

html { font-size: 16px; }
body {
  font-family: 'Barlow', sans-serif;
  background: #f4f1ec;
  -webkit-font-smoothing: antialiased;
}

/* ═══════════════════════════════════════
   FOOTER WRAPPER
═══════════════════════════════════════ */
.site-footer {
  position: relative;
  background: linear-gradient(170deg, #16262f 0%, #1a2d39 45%, #1c2f3c 100%);
  color: rgba(255,255,255,.62);
  overflow: hidden;
}

/* ─── background grid texture ─── */
.site-footer::before {
  content: '';
  position: absolute;
  inset: 0;
  background:
    repeating-linear-gradient(
      90deg,
      transparent 0px, transparent 79px,
      rgba(255,255,255,.018) 79px, rgba(255,255,255,.018) 80px
    ),
    repeating-linear-gradient(
      0deg,
      transparent 0px, transparent 79px,
      rgba(255,255,255,.018) 79px, rgba(255,255,255,.018) 80px
    );
  pointer-events: none;
  z-index: 0;
}

/* ─── warm glow ambiance ─── */
.site-footer::after {
  content: '';
  position: absolute;
  bottom: -100px; right: -100px;
  width: 560px; height: 560px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(170,126,86,.09) 0%, transparent 65%);
  filter: blur(60px);
  pointer-events: none;
  z-index: 0;
}

/* ─── animated top separator ─── */
.footer-top-bar {
  position: relative;
  z-index: 2;
  height: 3px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    var(--rust) 15%,
    var(--golden) 35%,
    var(--golden-light) 50%,
    var(--golden) 65%,
    var(--rust) 85%,
    transparent 100%
  );
  background-size: 200% 100%;
  animation: shimmer-bar 6s linear infinite;
}
@keyframes shimmer-bar {
  0%   { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ═══════════════════════════════════════
   MAIN FOOTER BODY
═══════════════════════════════════════ */
.footer-body {
  position: relative;
  z-index: 2;
  max-width: 1240px;
  margin: 0 auto;
  padding: 72px 36px 0;
}
@media(max-width:600px){ .footer-body{ padding: 56px 20px 0; } }

/* ─── top grid: brand + nav columns ─── */
.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  gap: 64px;
  padding-bottom: 60px;
  border-bottom: 1px solid rgba(255,255,255,.07);
}
@media(max-width:960px){
  .footer-grid { grid-template-columns: 1fr 1fr; gap: 48px; }
  .footer-brand { grid-column: 1 / -1; }
}
@media(max-width:580px){
  .footer-grid { grid-template-columns: 1fr; gap: 40px; }
}

/* ═══════════════════════════════════════
   BRAND COLUMN
═══════════════════════════════════════ */
.footer-brand {}

/* logo block */
.brand-logo-wrap {
  display: flex;
  align-items: center;
  gap: 18px;
  margin-bottom: 28px;
}

.brand-logo-img {
  /* Logo en colores originales – sin filtro */
  width: 72px;
  height: 72px;
  object-fit: contain;
  flex-shrink: 0;
  /* Subtle drop shadow to lift it off the dark bg */
  filter: drop-shadow(0 4px 16px rgba(0,0,0,.35));
  transition: transform .5s var(--ease), filter .4s ease;
}
.brand-logo-img:hover {
  transform: scale(1.05);
  filter: drop-shadow(0 6px 22px rgba(170,126,86,.35));
}

.brand-wordmark {}
.brand-name {
  font-family: var(--font-display);
  font-size: 2rem;
  font-weight: 400;
  color: var(--white);
  line-height: 1.1;
  letter-spacing: 0.02em;
  text-transform: uppercase;
}
.brand-tagline {
  font-family: var(--font-heading);
  font-size: .72rem;
  font-weight: 700;
  letter-spacing: .18em;
  text-transform: uppercase;
  color: var(--golden);
  margin-top: 4px;
}

/* divider scratch */
.brand-rule {
  width: 48px; height: 2px;
  background: linear-gradient(90deg, var(--golden-dark), var(--golden-light));
  border-radius: 2px;
  margin-bottom: 20px;
  position: relative;
}
.brand-rule::after {
  content:'';
  position:absolute;
  left:0; top:6px;
  width:28px; height:1px;
  background: rgba(170,126,86,.3);
  border-radius:1px;
}

.brand-desc {
  font-size: .9rem;
  line-height: 1.78;
  color: rgba(255,255,255,.50);
  max-width: 400px;
  margin-bottom: 32px;
}
.brand-desc strong { color: rgba(255,255,255,.75); font-weight: 600; }

/* ─── availability badge ─── */
.brand-avail {
  display: inline-flex;
  align-items: center;
  gap: 9px;
  padding: 9px 18px;
  border-radius: 100px;
  background: rgba(255,255,255,.05);
  border: 1px solid rgba(255,255,255,.10);
  margin-bottom: 32px;
}
.avail-pulse {
  width: 7px; height: 7px;
  border-radius: 50%;
  background: #4ade80;
  box-shadow: 0 0 0 0 rgba(74,222,128,.5);
  animation: pulse-green 2s ease-in-out infinite;
  flex-shrink: 0;
}
@keyframes pulse-green {
  0%   { box-shadow: 0 0 0 0 rgba(74,222,128,.5); }
  70%  { box-shadow: 0 0 0 7px rgba(74,222,128,0); }
  100% { box-shadow: 0 0 0 0 rgba(74,222,128,0); }
}
.avail-text {
  font-size: .78rem;
  font-weight: 600;
  color: rgba(255,255,255,.55);
  letter-spacing: .03em;
}
.avail-text strong { color: #4ade80; }

/* ─── social icons ─── */
.social-row {
  display: flex;
  gap: 10px;
}

.social-btn {
  width: 42px; height: 42px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,.05);
  border: 1px solid rgba(255,255,255,.08);
  color: rgba(255,255,255,.45);
  text-decoration: none;
  transition: background .3s ease, color .3s ease, transform .4s var(--ease), box-shadow .3s ease, border-color .3s ease;
