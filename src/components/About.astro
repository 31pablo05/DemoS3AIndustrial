<style>
  /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     ABOUT SECTION
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
  .about-section {
    position: relative;
    padding: 100px 0 0;
    overflow: hidden;
    background: linear-gradient(160deg, #f7f4ef 0%, #f0ece4 50%, #f4f1ec 100%);
  }

  .about-watermark {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    opacity: .035;
    z-index: 0;
  }
  .about-watermark img { width: 600px; height: 600px; object-fit: contain; }

  .about-texture {
    position: absolute;
    inset: 0;
    background-image: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 20px,
      rgba(49,61,73,.018) 20px,
      rgba(49,61,73,.018) 40px
    );
    pointer-events: none;
  }

  .about-container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 32px;
    position: relative;
    z-index: 2;
  }
  @media(max-width:640px) { .about-container { padding: 0 20px; } }

  /* â”€â”€ GRID â”€â”€ */
  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 80px;
  }
  @media(max-width:960px) {
    .about-grid { grid-template-columns: 1fr; gap: 48px; }
  }

  /* â”€â”€ TEXT COLUMN â”€â”€ */
  .about-text-col {
    order: 1;
  }
  @media(max-width:960px) { .about-text-col { order: 2; text-align: center; } }

  .about-eyebrow {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 20px;
  }
  @media(max-width:960px) { .about-eyebrow { justify-content: center; } }
  .about-eyebrow-rule {
    width: 32px; height: 2px;
    background: linear-gradient(90deg, transparent, #aa7e56);
    border-radius: 2px;
    flex-shrink: 0;
  }
  .about-eyebrow-label {
    font-family: var(--font-heading);
    font-size: .72rem;
    font-weight: 700;
    letter-spacing: .16em;
    text-transform: uppercase;
    color: #8b6644;
  }

  .about-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 400;
    line-height: 1.0;
    color: #1e313f;
    letter-spacing: .02em;
    text-transform: uppercase;
    margin-bottom: 20px;
  }
  .about-title em {
    font-style: italic;
    background: linear-gradient(135deg, #7b5433, #aa7e56, #cca373);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-accent-line {
    width: 72px;
    height: 4px;
    background: linear-gradient(90deg, #7b5433, #aa7e56, #cca373);
    border-radius: 2px;
    margin-bottom: 28px;
    position: relative;
  }
  .about-accent-line::after {
    content: '';
    position: absolute;
    left: 0; top: 8px;
    width: 44px; height: 2px;
    background: rgba(170,126,86,.3);
    border-radius: 2px;
  }
  @media(max-width:960px) {
    .about-accent-line { margin-left: auto; margin-right: auto; }
  }

  .about-body {
    font-family: var(--font-body);
    font-size: clamp(.95rem, 1.4vw, 1.08rem);
    line-height: 1.8;
    color: rgba(34,53,70,.85);
    margin-bottom: 32px;
  }
  .about-body p { margin-bottom: 1rem; }
  .about-body p:last-child { margin-bottom: 0; }
  .about-body strong { color: #1e313f; font-weight: 700; }
  .about-highlight { color: #7b5433; font-weight: 700; font-style: normal; }

  /* â”€â”€ FEATURE CARDS â”€â”€ */
  .about-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }
  @media(max-width:480px) { .about-features { grid-template-columns: 1fr; } }

  .feature-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: #fff;
    border-radius: 12px;
    border: 1px solid rgba(170,126,86,.15);
    box-shadow: 0 2px 12px rgba(0,0,0,.05);
    font-family: var(--font-heading);
    font-size: .88rem;
    font-weight: 700;
    color: #1e313f;
    text-transform: uppercase;
    letter-spacing: .04em;
    transition: all .3s cubic-bezier(.22,1,.36,1);
  }
  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(30,49,63,.12);
    border-color: rgba(170,126,86,.3);
  }

  .feature-icon {
    width: 38px; height: 38px;
    border-radius: 10px;
    background: linear-gradient(135deg, #1e313f, #334c60);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    flex-shrink: 0;
    transition: transform .3s ease;
  }
  .feature-card:hover .feature-icon { transform: scale(1.1) rotate(5deg); }

  /* â”€â”€ IMAGE COLUMN â”€â”€ */
  .about-img-col {
    order: 2;
  }
  @media(max-width:960px) { .about-img-col { order: 1; } }

  .about-image-wrapper {
    position: relative;
  }

  .about-img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0,0,0,.18);
    display: block;
  }

  .about-img-frame {
    position: absolute;
    inset: -12px;
    border: 2px solid rgba(170,126,86,.25);
    border-radius: 24px;
    pointer-events: none;
    z-index: -1;
  }

  .about-badge {
    position: absolute;
    bottom: -18px;
    left: -18px;
    background: linear-gradient(135deg, #7b5433, #aa7e56);
    padding: 20px 24px;
    border-radius: 18px;
    box-shadow: 0 12px 32px rgba(123,84,51,.45);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
  }
  @media(max-width:640px) {
    .about-badge { bottom: -12px; left: -8px; padding: 14px 18px; }
  }
  .about-badge-num {
    font-family: var(--font-display);
    font-size: 2.8rem;
    font-weight: 400;
    color: #fff;
    line-height: 1;
    letter-spacing: .02em;
  }
  .about-badge-txt {
    font-family: var(--font-heading);
    font-size: .68rem;
    font-weight: 700;
    color: rgba(255,255,255,.85);
    text-transform: uppercase;
    letter-spacing: .1em;
    margin-top: 4px;
    text-align: center;
  }

  /* â”€â”€ STATS BAR â”€â”€ */
  .about-stats {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto 1fr auto 1fr;
    align-items: center;
    gap: 0;
    padding: 40px 48px;
    background: linear-gradient(170deg, #13202a 0%, #1a2d3a 100%);
    border-radius: 20px 20px 0 0;
    margin-top: 60px;
  }
  @media(max-width:768px) {
    .about-stats {
      grid-template-columns: 1fr 1fr;
      gap: 32px 20px;
      border-radius: 16px 16px 0 0;
      padding: 32px 28px;
    }
    .about-stat-sep { display: none; }
  }
  @media(max-width:480px) {
    .about-stats { grid-template-columns: 1fr 1fr; gap: 24px 16px; }
  }

  .about-stat { text-align: center; }
  .about-stat-num {
    display: block;
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 400;
    color: #cca373;
    letter-spacing: .02em;
    line-height: 1;
    margin-bottom: 6px;
  }
  .about-stat-lbl {
    display: block;
    font-family: var(--font-heading);
    font-size: .72rem;
    font-weight: 700;
    letter-spacing: .12em;
    text-transform: uppercase;
    color: rgba(255,255,255,.5);
  }
  .about-stat-sep {
    width: 1px;
    height: 50px;
    background: rgba(255,255,255,.1);
  }
</style>